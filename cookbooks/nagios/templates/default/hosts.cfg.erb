# host definitions

define host {
  use server
  address <%= @node[:ipaddress] %>
  host_name <%= @node[:fqdn] %>
  hostgroups servers
}

<% @hosts.each do |host| %>
<% next if host['ipaddress'] == @node[:ipaddress] %>
define host {
  use server
  address <%= host['ipaddress'] %>
  host_name <%= host['hostname'] %>
  hostgroups <%= hostgroups_for(host) %>
}

<% end %>