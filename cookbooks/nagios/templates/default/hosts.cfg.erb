# host definitions

define host {
  use server
  address <%= node[:ipaddress] %>
  host_name <%= node[:fqdn] %>
  hostgroups server
}

<% @hosts.each do |host| %>
define host {
  use server
  address <%= host['ipaddress'] %>
  host_name <%= host['hostname'] %>
  hostgroups <%= hostgroups_for(host) %>
}

<% end %>